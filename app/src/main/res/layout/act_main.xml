<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal">

        <com.zero.legwork.widget.TabItemView
            android:id="@+id/tab_work"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4"
            tab:tab_icon="@mipmap/ic_work"
            tab:tab_text="@string/tab_title_work"
            tab:tab_text_size="@dimen/text_size_micro"
            tab:tab_color="@color/colorPrimary"/>

        <com.zero.legwork.widget.TabItemView
            android:id="@+id/tab_visit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4"
            tab:tab_icon="@mipmap/ic_visit"
            tab:tab_text="@string/tab_title_visit"
            tab:tab_text_size="@dimen/text_size_micro"
            tab:tab_color="@color/colorPrimary"/>

        <com.zero.legwork.widget.TabItemView
            android:id="@+id/tab_report"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4"
            tab:tab_icon="@mipmap/ic_report"
            tab:tab_text="@string/tab_title_report"
            tab:tab_text_size="@dimen/text_size_micro"
            tab:tab_color="@color/colorPrimary"/>

        <com.zero.legwork.widget.TabItemView
            android:id="@+id/tab_other"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="@dimen/dimen_4"
            tab:tab_icon="@mipmap/ic_other"
            tab:tab_text="@string/tab_title_other"
            tab:tab_text_size="@dimen/text_size_micro"
            tab:tab_color="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>